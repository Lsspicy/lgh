view, text {
  letter-spacing: 2rpx;
}

.slide swiper {
  height: 450rpx;
}

image.slide-image {
  width: 100%;
  height: 100%;
}

.information {
  font-size: 12px;
  font-weight: bold;
  padding: 10px;
}

.information image {
  float: left;
  width: 30rpx;
  height: 30rpx;
  padding-right: 8px;
  padding-top: 2px;
}

.line {
  margin: 10px 0;
  width: 100%;
  height: 10px;
  background: linear-gradient(#cecece, #f2f2f2);
}

.foot {
  padding: 30rpx 30rpx;
}

.foot image {
  box-sizing: border-box;
  display: block;
  float: left;
  width:30%;
}

.foot .introduce {
  padding-left: 20px;
  box-sizing: border-box;
  display: block;
  float:left;
  width:70%;
  font-size: 12px;
  line-height: 1.5;
  color: #353535;
  text-indent: 2em;
}

navigator.details {
  display: block;
  float: right;
  color: #696969;
  letter-spacing: 2px;
  width:50%;
  text-align: right;
  padding-top: 5px;
}
.details-txt{
  padding: 0;
  margin:0;
  text-align: right;
}
navigator  .icon1 {
  height: 10px;
  width: 10px;
}

navigator  .icon2 {
  height: 10px;
  width: 12px;
}

